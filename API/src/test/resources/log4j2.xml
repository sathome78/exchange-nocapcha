<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %x %c{1} [%M]- %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <logger name="me.exrates" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>